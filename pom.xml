  <modelVersion>4.0.0</modelVersion>
  <groupId>org.alluxio</groupId>
  <artifactId>alluxio-web</artifactId>
  <version>1.5.0-release</version>
  <packaging>pom</packaging>
  <name>Alluxio Web</name>
